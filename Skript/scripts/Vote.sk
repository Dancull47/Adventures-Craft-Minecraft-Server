command /Vote:
    executable by: player
    trigger:
        send formatted "&eVote to received a &9random reward&e! <tooltip:&6&lCLICK TO VOTE><url:https://www.adventurescraft.net/wiki/site/vote/>&6&lCLICK TO VOTE<reset>&e!" to player
        execute console command "/dm open Vote %player%"
command /VoteClaim:
    executable by: player
    trigger:
        set {Votes::%player%} to placeholder "betonquest_items:point.Vote.amount"
        if {Votes::%player%} parsed as a number is greater than 0:
            execute console command "/mm items give %player% ENCHANTED_MATERIALS"
            execute console command "/q point %player% add items.Vote -1"
            message "&aYour Vote Reward has been claimed!"
        else:
            message "&cYou don't have any Vote Rewards to be claimed!"


